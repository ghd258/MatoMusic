<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatoMusic.AutoCompleteView">
    <ContentView.Content>
        <StackLayout x:Name="StkBase">
            <StackLayout x:Name="InnerLayout">
                <Entry x:Name="EntText"
                       HeightRequest="32"
                       FontSize="{StaticResource BodyFontSize}"
                       TextChanged="EntText_OnTextChanged">
                </Entry>
                <Button x:Name="BtnSearch"
                        Clicked="BtnSearch_OnClicked"></Button>
            </StackLayout>
            <ListView x:Name="LstSuggestions"  
                      ItemSelected="LstSuggestions_OnItemSelected"
                                      RowHeight="64"
                      >
            </ListView>
        </StackLayout>
    </ContentView.Content>
</ContentView>